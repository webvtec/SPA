<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nails by Navia Chat</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
            height: 100vh;
            padding: 10px;
        }
        
        .chat-container {
            background: white;
            border-radius: 20px;
            height: calc(100vh - 20px);
            display: flex;
            flex-direction: column;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            overflow: hidden;
        }
        
        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            text-align: center;
            border-radius: 20px 20px 0 0;
        }
        
        .header h1 {
            font-size: 24px;
            margin-bottom: 5px;
        }
        
        .status {
            padding: 15px 20px;
            background: #d4edda;
            color: #155724;
            font-size: 14px;
            text-align: center;
            border-bottom: 1px solid #c3e6cb;
        }
        
        #chat {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background: #fafafa;
        }
        
        .msg {
            margin: 15px 0;
            padding: 15px 18px;
            border-radius: 20px;
            max-width: 85%;
            word-wrap: break-word;
            font-size: 16px;
            line-height: 1.5;
        }
        
        .msg.user {
            background: #667eea;
            color: white;
            margin-left: auto;
            border-bottom-right-radius: 5px;
        }
        
        .msg.bot {
            background: white;
            color: #333;
            border: 2px solid #e0e6ff;
            border-bottom-left-radius: 5px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        
        .input-area {
            padding: 20px;
            background: white;
            display: flex;
            gap: 12px;
            align-items: center;
            border-top: 1px solid #e0e0e0;
        }
        
        #messageInput {
            flex: 1;
            padding: 16px 20px;
            border: 2px solid #e0e0e0;
            border-radius: 25px;
            outline: none;
            font-size: 16px;
            background: #f8f9fa;
        }
        
        #messageInput:focus {
            border-color: #667eea;
            background: white;
        }
        
        .send-btn {
            width: 55px;
            height: 55px;
            border: none;
            background: #667eea;
            color: white;
            border-radius: 50%;
            font-size: 22px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
            touch-action: manipulation;
        }
        
        .send-btn:hover, .send-btn:active {
            background: #5a67d8;
            transform: scale(0.95);
        }
        
        .loading {
            color: #667eea;
            font-style: italic;
        }
        
        .welcome {
            text-align: center;
            color: #666;
            font-style: italic;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="header">
            <h1>üíÖ Nails by Navia</h1>
            <p>Your nail art assistant</p>
        </div>
        
        <div class="status">
            ‚úÖ Ready to chat! Ask me about nail colors, designs & care tips!
        </div>
        
        <div id="chat">
            <div class="welcome">
                üëã Hi! I'm Navia, your nail expert!<br>
                Try asking: "What colors are trending?" or "Show me easy nail art"
            </div>
        </div>
        
        <div class="input-area">
            <input 
                type="text" 
                id="messageInput" 
                placeholder="Ask about nail colors, designs..."
            >
            <button class="send-btn" onclick="sendMessage()">
                ‚û§
            </button>
        </div>
    </div>

    <script>
        const SPACE_URL = "https://webvtec-nails-by-navia-bot.hf.space";
        const chat = document.getElementById("chat");
        const input = document.getElementById("messageInput");
        
        // Simple API call using fetch (no external libraries)
        async function callAPI(message) {
            try {
                console.log("Sending to API:", message);
                
                const response = await fetch(`${SPACE_URL}/api/predict`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        data: [
                            message,    // message
                            [],         // history
                            "You are Navia, a nail art expert", // system
                            100,        // max_tokens
                            0.7,        // temperature
                            0.9         // top_p
                        ],
                        fn_index: 0
                    })
                });

                if (!response.ok) {
                    throw new Error(`API Error: ${response.status}`);
                }

                const result = await response.json();
                console.log("API Response:", result);
                
                return result.data[0] || "I'm here to help with your nail questions! üíÖ";
                
            } catch (error) {
                console.error("API call failed:", error);
                
                // Fallback responses when API fails
                const msg = message.toLowerCase();
                if (msg.includes('color') || msg.includes('colour')) {
                    return `Here are trending nail colors! üíÖ‚ú®\n\nüçÇ Fall Colors:\n‚Ä¢ Sage Green - earthy & chic\n‚Ä¢ Burgundy - rich & elegant\n‚Ä¢ Burnt Orange - warm vibes\n\nüå∏ Classics:\n‚Ä¢ Classic Red\n‚Ä¢ Nude/Beige\n‚Ä¢ French Manicure\n\nWhat's your favorite color family?`;
                } else if (msg.includes('design') || msg.includes('art')) {
                    return `Love nail art! Here are some ideas: üé®\n\n‚ú® Beginner-Friendly:\n‚Ä¢ Accent nails\n‚Ä¢ Simple dots\n‚Ä¢ Glitter tips\n‚Ä¢ Stripes\n\nüé≠ Trending:\n‚Ä¢ Minimalist lines\n‚Ä¢ Abstract swirls\n‚Ä¢ Chrome finish\n\nWant step-by-step instructions?`;
                } else if (msg.includes('care') || msg.includes('tip')) {
                    return `Great nail care tips! üí™\n\nüß¥ Essential Care:\n‚Ä¢ Use cuticle oil daily\n‚Ä¢ Always use base coat\n‚Ä¢ Moisturize hands & nails\n‚Ä¢ File in one direction\n\n‚è±Ô∏è Make Polish Last:\n‚Ä¢ Thin coats\n‚Ä¢ Seal edges\n‚Ä¢ Top coat every 3 days\n\nWhat specific care question do you have?`;
                } else {
                    return `Hi! I'm Navia üíÖ You asked: "${message}"\n\nI can help with:\n‚Ä¢ Trending colors\n‚Ä¢ Nail art designs\n‚Ä¢ Care & maintenance tips\n‚Ä¢ Product recommendations\n\nWhat would you like to know?`;
                }
            }
        }
        
        async function sendMessage() {
            const text = input.value.trim();
            if (!text) return;
            
            console.log("Send button clicked, message:", text);
            
            // Add user message
            addMessage(text, "user");
            input.value = "";
            
            // Add thinking message
            const thinking = addMessage("üí≠ Let me think about that...", "bot");
            
            try {
                const response = await callAPI(text);
                thinking.textContent = response;
            } catch (error) {
                thinking.textContent = `Sorry, I'm having trouble right now. But I can still help! Try asking about "trending colors" or "easy nail designs" üíÖ`;
            }
        }
        
        function addMessage(text, sender) {
            // Remove welcome message on first user message
            if (sender === "user") {
                const welcome = document.querySelector('.welcome');
                if (welcome) welcome.remove();
            }
            
            const div = document.createElement("div");
            div.className = "msg " + sender;
            div.textContent = text;
            chat.appendChild(div);
            chat.scrollTop = chat.scrollHeight;
            return div;
        }
        
        // Handle Enter key
        input.addEventListener("keydown", function(e) {
            if (e.key === "Enter") {
                e.preventDefault();
                sendMessage();
            }
        });
        
        // Focus input on load
        window.addEventListener('load', function() {
            input.focus();
        });
        
        // Test send button works
        console.log("Script loaded successfully!");
    </script>
</body>
</html>
